@using React.Net.Models
@model IEnumerable<CommentModel>

@{
    Layout = null;
}
<html>
<head>
    <title>Hello React</title>
</head>
<body>
     
    @Html.React("CommentBox", new
{
    initialData = Model,
    url = Url.Action("Comments"),
    submitUrl = Url.Action("AddComment"),
    pollInterval = 2000,
})
    <script src="//cdn.bootcss.com/react/15.3.1/react.js"></script>
    <script src="//cdn.bootcss.com/react/15.3.1/react-dom.js"></script>
     <script src="@Url.Content("~/src/showdown.min.js")"></script>
    <script src="@Url.Content("~/src/index.jsx")"></script>
    @Html.ReactInitJavaScript()

</body>
</html>